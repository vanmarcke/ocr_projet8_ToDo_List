{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
            {{ form_widget(form) }}

            {% if task.isDone == true %}
                <a href="{{ path('task_done_list') }}" class="btn btn-primary">Retour à la liste des tâches terminées</a>
            {% else %}
                <a href="{{ path('task_todo_list') }}" class="btn btn-primary">Retour à la liste des tâches à faire</a>
            {% endif %}
            <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
